<div class="page-heading">
    <h1>{{title}}</h1>
</div>

<div class="item-display">
    <div class="left-col">
        <div class="image-box">
            <img src="{{data.image}}" >
        </div>
    </div>
    <div class="right-col">
        <h1>{{data.title}}</h1>
        <h2>{{data.price}}</h2>
        <h4 id="prev-price">{{data.normal_price}}</h3>
        <h4>Cost Reduced {{data.savings}} </h3>
        <br>
        <h4 id="rating-text">{{data.rating}}</h3>
        <p>{{data.review_count}}</p>
        <h3 id="available-text">{{data.availability}}</h3>
        <button class="button">
            <a href="{{data.source}}" target="_blank" >Buy Now</a>
        </button>
        <br>
        <br>
        <input class="button" type="submit" value="Add to Wishlist" onclick="window.location.href = '/user/addWishlist/{{data._id}}'">
    </div>
</div>
<div class="item-description">
    <hr>
    <div>
        <h2>Description</h2>
    </div>
    <div>
        <p>{{data.description}}</p>
    </div>
</div>
