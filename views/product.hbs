<div class="page-heading">
    <h1>{{title}}</h1>
</div>

<div class="item-grid">
    {{#each data}}
    <div class="card">
        <div class="product-image-box">
            <div class="product-image-overlay">
                <span><a href="./{{this.type}}/{{this._id}}">
                    <img class="product-image" src="{{this.image}}" width="100%">
                    </a>
                </span>
            </div>
        </div>
        <div class="container">
            <div class="product-card-title">
                <a href="./{{this.type}}/{{this._id}}">
                    <h4>{{this.title}}</h4>
                </a>
            </div>
            <div class="product-card-info">
                <h2>{{this.price}}</h2>
            </div>
            <div class="product-card-info">
            <p>toFloat({{this.rating}})</p>
            </div>
        </div>
    </div>
    {{/each}}
</div>