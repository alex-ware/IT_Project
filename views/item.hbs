<div class="page-heading">
    <h1>{{title}}</h1>
</div>
<div class="item-display">
    <div class="left-col">
        <div class="image-box">
            <img src="{{data.image}}">
        </div>
    </div>
    <div class="right-col">
        <h2>{{data.title}}</h2>
        <h3>{{data.price}}</h3>
        <h4 id="rating-text">{{data.rating}}</h4>
        <p>{{data.reviews_no}}</p>
        <h3 id="available-text">{{data.availability}}</h3>
        <button class="button">
            <a href="{{data.source}}" target="_blank" >Buy Now</a>
        </button>
    </div>
</div>       
<div class="item-description">
    <hr>
    <div>
        <h2>Description</h2>
    </div>
    <div>
        <p>{{data.description}}</p>
    </div>
</div>
<div class="item-description final-item-margin">
    <hr>
    <div>
        <h2>Similar Product on PC Case Gear</h2>
    </div>
    <div class="list grid">
        <div class="list-grid-inner">
            <div class="list-left-grid">
                <div class="list-image">
                    <a href="/{{data.type}}/{{data.id}}">
                        <img src="{{data.image}}" width="100px">
                    </a>
                    
                </div>
            </div>
            
            <div class="list-item">
                <div class="list-right-grid">
                    <div class="list-right-grid-inner">
                        <div class="list-item-info">
                            <div>
                                <div class="list-item-info-col">
                                    <div class="product-card-title">
                                        <a href="/{{data.type}}/{{data.id}}">
                                            {{data.title}}
                                        </a>
                                    </div>
                                    <div class="margin-none">
                                        <h2>{{data.price}}</h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                            
                        <div class="list-item-action">
                            <div>
                                <button class="button">
                                    <a href="{{data.source}}" target="_blank" >Buy Now</a>
                                </button>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
